generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId String @id @default(uuid())
  firstName String
  lastName String
  email String @unique
  password String
  phone String?
  orgs OrganisationOnUser[]
}

model Organisation {
  orgId String @unique @id @default(uuid())
  name String
  description String?
  user OrganisationOnUser[]
}

model OrganisationOnUser {
  organisation       Organisation     @relation(fields: [organisationId], references: [orgId], onDelete: Cascade)
  organisationId     String // relation scalar field (used in the `@relation` attribute above)
  user   User @relation(fields: [userId], references: [userId], onDelete: Cascade)
  userId String // relation scalar field (used in the `@relation` attribute above)
  assignedAt DateTime @default(now())

  @@id([organisationId, userId])
}